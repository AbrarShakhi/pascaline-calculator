<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#2E2E2E" />

    <!-- Rounded corners -->
    <corners android:radius="6dp" />

    <!-- Optional: adds internal space so text does not touch edges -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />

    <!-- Optional: border -->
    <!-- <stroke android:width="1dp" android:color="#424242" /> -->

</shape>

